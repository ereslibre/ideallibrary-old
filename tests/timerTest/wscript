def configure(conf):
    pass

def build(bld):
    bld.new_task_gen(
        features     = 'cxx cprogram',
        source       = 'main.cpp',
        target       = 'timerTest',
        includes     = '../..',
        uselib       = 'IDEAL',
        uselib_local = 'idealcore',
        install_path = None
    )
