testsToSkip="guiTest guiTest2 idleTest timerTest"
skipTest=false

ls build &> /dev/null
if [ $? -ne 0 ]; then
    echo "Please, compile and install project first:"
    echo -e "\t./waf configure --prefix=/some/dir"
    echo -e "\t./waf build [-p]"
    echo -e "\t[sudo] ./waf install"
    exit 1
fi

which valgrind &> /dev/null
if [ $? -ne 0 ]; then
    echo "Valgrind has not been found. Please, install it and retry"
    exit 1
fi

if [ $# -eq 1 ]; then
    for test in $1; do
        if [ $test == "wscript" ]; then
            continue
        fi
        if [ ! -e "build/default/tests/$test/$test" ]; then
            printf "\033[1;37m%s\033[0m - \033[1;31m%s\033[0m\n" $test "skipping (does not exist)"
            echo
            continue
        fi
        for testToSkip in $testsToSkip; do
            if [ $testToSkip == $test ]; then
                skipTest=true
                break
            fi
        done
        if [ $skipTest == true ]; then
            printf "\033[1;37m%s\033[0m - \033[1;33m%s\033[0m\n" $test "skipping (in skip list)"
            echo
            skipTest=false
            continue
        fi
        printf "\033[1;37m%s\033[0m - \033[1;32m%s\033[0m\n" $test "running"
        echo
        echo -e "\t1.- Memcheck results:"
        valgrind build/default/tests/$test/$test 2>&1 | egrep 'ERROR|malloc\/free' | cut -d' ' -f2- | sed "s/^/\t\t/"
        echo -e "\t2.- Helgrind results:"
        valgrind --tool=helgrind build/default/tests/$test/$test 2>&1 | egrep ERROR | cut -d' ' -f2- | sed "s/^/\t\t/"
        echo
    done
    exit 0
elif [ $# -gt 1 ]; then
    echo "usage: ./runIntegrationTest [\"testFoo testBar testFooBar\"]"
    exit 1
fi

for test in $( ls tests ); do
    if [ $test == "wscript" ]; then
        continue
    fi
    if [ ! -e "build/default/tests/$test/$test" ]; then
        printf "\033[1;37m%s\033[0m - \033[1;31m%s\t\033[0m\n" $test "skipping (does not exist)"
        echo
        continue
    fi
    for testToSkip in $testsToSkip; do
        if [ $testToSkip == $test ]; then
            skipTest=true
            break
        fi
    done
    if [ $skipTest == true ]; then
        printf "\033[1;37m%s\033[0m - \033[1;33m%s\t\033[0m\n" $test "skipping (in skip list)"
        echo
        skipTest=false
        continue
    fi
    printf "\033[1;37m%s\033[0m - \033[1;32m%s\033[0m\n" $test "running"
    echo
    echo -e "\t1.- Memcheck results:"
    valgrind build/default/tests/$test/$test 2>&1 | egrep 'ERROR|malloc\/free' | cut -d' ' -f2- | sed "s/^/\t\t/"
    echo -e "\t2.- Helgrind results:"
    valgrind --tool=helgrind build/default/tests/$test/$test 2>&1 | egrep ERROR | cut -d' ' -f2- | sed "s/^/\t\t/"
    echo
done

exit 0
